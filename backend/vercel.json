{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/vite",
        "config": { "zeroConfig": true }
      },
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/frontend/index.html"
      },
      {
        "src": "/api/(.*)",
        "dest": "/server.js"
      }
    ],
    "rewrites": [
        { 
            "source": "/(.*)",
            "destination": "/"
         }
        ] 
  }
  